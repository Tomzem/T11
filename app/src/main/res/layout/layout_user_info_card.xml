<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_140"
    android:background="@drawable/shape_card_user_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:orientation="horizontal"
        android:layout_margin="@dimen/widget_size_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/widget_size_5">

            <TextView
                android:id="@+id/tv_user_real_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_18"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.tomze.tiu.widget.CircleTextView
            android:id="@+id/ctv_user_name"
            android:layout_width="@dimen/widget_size_48"
            android:layout_height="@dimen/widget_size_48"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/widget_size_15"
        android:layout_marginStart="@dimen/widget_size_15"
        android:layout_marginBottom="@dimen/widget_size_15"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_15" />

</RelativeLayout>